#!/bin/bash

read -p "ğŸ”¢ How many files do you want to create? " count
read -p "ğŸ“„ What file extension? (e.g. js, py): " ext

for ((i = 1; i <= count; i++)); do
    filename="exercise$i.$ext"

    if [ -e "$filename" ]; then
        echo "âš ï¸  Skipped: $filename already exists."
    else
        touch "$filename"
        echo "âœ… Created: $filename"
    fi
done
